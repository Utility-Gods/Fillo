{
  "manifest_version": 3,
  "name": "Fillo - Intelligent Form Filler",
  "version": "1.0.0",
  "description": "AI-powered form filling for localhost development",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://localhost/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ],
      "js": ["src/content/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "commands": {
    "generate-focused": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Generate content for focused field"
    },
    "fill-all": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Fill all detected form fields"
    },
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toggle form field overlays"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/ui/overlay.css"],
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ]
    }
  ]
}

